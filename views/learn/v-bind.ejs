<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta http-equiv="X-UA-Compatible" content="ie=edge">
   <title>v-bind</title>
   <style>
      .active{
         background-color: orange;
         font-size: 20px;
         color: #fff;
      }
   </style>
</head>
<body>
   <div id="app">
      <!--v-bind:用于绑定属性，且可以省略 v-bind:src -> :src-->
      <img v-bind:src="imgSrc" :alt="alt"/>
      <img :src="imgSrc1" alt="我是关闭按钮"/>
      <!--v-bind:绑定class样式-->
      <div>
         <p v-for="(college, index) in colleges" class="active">
            {{college}}
         </p>
         <p>============================================</p>
         <p v-for="(college, index) in colleges" :class="index === activeIndex ? 'active' : ''">
            {{college}}
         </p>
         <p>============================================</p>
         <p v-for="(college, index) in colleges" :class="{active: index === activeIndex}">
            {{college}}
         </p>
         <p>============================================</p>
         <p v-for="(college, index) in colleges" :class="classObj">
            {{college}}
         </p>
      </div>
      <!--v-bind: 绑定style样式，使用键值对的格式-->
      
      <div :style="{color: fontColor}"><!--{color: fontColor} === {color: 'green'}-->
         今天天气很好！
      </div>
      <div :style="styleObj">
         哈哈哈哈呵呵呵呵呵
      </div>
      <div :style="{display: ['-webkit-box','flex']}">
         测试样式前缀
      </div>
      <!--v-bind：为元素添加某些属性，例如id等-->
      <div v-bind:id="key">
         测试id属性绑定
      </div>
      <div v-bind="{id:key}">
         测试属性对象绑定
      </div>
   </div>
   <script src="/scripts/assets/vue.min.js"></script>
   <script>
      //v-bind用于绑定属性，class, style, 以及有属性的对象
      let vm = new Vue({
         el: '#app',
         data: {
            imgSrc: '/images/base64/icon-search.png',
            imgSrc1: '/images/base64/icon-clear.png',
            alt: '我是搜索',
            colleges: [
               'IOS学院',
               'Android学院',
               'Java学院',
               'HTML5学院',
               'UI学院',
            ],
            activeIndex: 3,
            classObj: {
               active: true
            },
            fontColor: 'green',
            styleObj: {
               color: 'red',
               fontWeight:'bold',
               fontSize: '30px'
            },
            key:'testBind'
         },
         
      })
   </script>
</body>
</html>